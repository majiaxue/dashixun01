<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.main.activity.MainActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:id="@+id/main_toolbar"
        >
        <ImageView
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:id="@+id/main_girl"
            android:src="@mipmap/mm"
            android:layout_marginLeft="@dimen/dp_18"/>
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_16"
            android:id="@+id/main_box"
            android:src="@drawable/message"
            android:layout_marginRight="@dimen/dp_23"
            android:layout_marginLeft="@dimen/dp_277"
            />
    </android.support.v7.widget.Toolbar>
    <View
        android:layout_below="@id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:id="@+id/view1"
        android:background="@drawable/toolbar_gr"/>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:id="@+id/tab"
        app:tabMode="fixed"
        android:background="@color/c_f5f5f5"
        app:tabSelectedTextColor="@color/c_fa6a13"
        app:tabIndicatorColor="@color/transparent"
        app:tabTextColor="@color/c_cecece"
        ></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vp"
        android:layout_below="@id/main_toolbar"
        android:layout_above="@id/tab"></android.support.v4.view.ViewPager>

</RelativeLayout>