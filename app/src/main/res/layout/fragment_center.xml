<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@mipmap/mm"
            android:id="@+id/head_img"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_37" />

        <TextView
            android:id="@+id/head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_42"
            android:layout_toRightOf="@id/head_img"
            android:text="林小姐"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_22" />

        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/head_name"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/head_img"
            android:text="四体不勤五谷不分人花痴健忘"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_below="@id/head_title"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toLeftOf="@id/head_show"
            android:src="@drawable/icon_me_bianji_hdpi" />

        <TextView
            android:id="@+id/head_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/head_title"
            android:layout_marginRight="@dimen/dp_21"
            android:layout_marginTop="4dp"
            android:text="编辑"
            android:textColor="@color/c_FA6A13"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/price_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_ll"
        android:layout_marginTop="@dimen/dp_37">

        <ImageView
            android:id="@+id/head_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_122"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/select_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_8"
            android:text="我的钱包"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/head_price_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_29"
            android:text="99"
            android:textColor="@color/white"
            android:textSize="58sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_toRightOf="@id/head_price_name"
            android:text="元"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/head_price_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_37"
            android:layout_marginTop="@dimen/dp_94"
            android:text="赢取奖金"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_94"
            android:layout_toRightOf="@id/head_price_show"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/price_rl"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_19">

        <RelativeLayout
            android:id="@+id/px"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_212"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_19">

            <ImageView
                android:id="@+id/id_name"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/white"
                android:src="@drawable/icon_me_kaquan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_17"
                android:text="我的卡券"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/right_arrow" />

            <View
                android:id="@+id/line_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_52"
                android:background="@color/c_f0f0f0" />

            <ImageView
                android:id="@+id/id_title"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_73"
                android:background="@color/white"
                android:src="@drawable/icon_me_yigou" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_69"
                android:text="已购行程"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_74"
                android:src="@drawable/right_arrow"
                />

            <View
                android:id="@+id/line_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_104"
                android:background="@color/c_f0f0f0" />

            <ImageView
                android:id="@+id/id_ti"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_125"
                android:background="@color/white"
                android:src="@drawable/icon_me_kaquan" />

            <TextView
                android:id="@+id/header_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_123"
                android:text="我的收藏"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_127"
                android:src="@drawable/right_arrow" />

            <View
                android:id="@+id/line_ti"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_156"
                android:background="@color/c_f0f0f0" />

            <ImageView
                android:id="@+id/id_show"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_184"
                android:background="@color/white"
                android:src="@drawable/icon_me_guanzhu" />

            <TextView
                android:id="@+id/head_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_175"
                android:text="我的关注"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_180"
                android:src="@drawable/right_arrow"
                />

            <View
                android:id="@+id/line_show"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_208"
                android:background="@color/c_f0f0f0" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/card">

        <ImageView
            android:id="@+id/id_img"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_126"
            android:src="@drawable/icon_me_kaquan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_marginTop="@dimen/dp_126"
            android:text="联系客服" />

        <ImageView
            android:id="@+id/id_img1"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_126"
            android:src="@drawable/icon_me_fankui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_119"
            android:layout_marginTop="@dimen/dp_126"
            android:text="意见反馈" />

        <ImageView
            android:id="@+id/id_img2"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_203"
            android:layout_marginTop="@dimen/dp_126"
            android:src="@drawable/icon_me_kaquan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_221"
            android:layout_marginTop="@dimen/dp_126"
            android:text="版本检测" />
    </RelativeLayout>

</RelativeLayout>

