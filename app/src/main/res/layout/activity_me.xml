<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".ui.main.activity.MeActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white"
        android:id="@+id/toolbar"
        >
        <ImageView
            android:src="@drawable/back_white"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:id="@+id/me_ll"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_13"
            android:textColor="@color/c_333333"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="个人信息"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/c_333333"

            />
    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:background="@drawable/toolbar_gr"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:text="获取途径"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/c_666666"
        android:layout_marginTop="@dimen/dp_12"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_211"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_13"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_14"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_333333"/>
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/mm"
                android:id="@+id/me_img"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_301"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_52"
                android:outlineSpotShadowColor="@color/c_f0f0f0"
                android:minWidth="@dimen/dp_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_69"
                android:text="用户昵称"

                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:id="@+id/tv_lovely"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_74"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:textColor="@color/c_333333"
                android:text="伴小米"/>
            <View
                android:minWidth="@dimen/dp_1"
                android:outlineSpotShadowColor="@color/c_f0f0f0"
                android:layout_marginTop="@dimen/dp_104"
                android:layout_width="wrap_content"
                android:id="@+id/line_title"

                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_123"
                android:text="性别"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_127"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:textColor="@color/c_333333"
                android:text="保密"/>
            <View
                android:minWidth="@dimen/dp_1"
                android:outlineSpotShadowColor="@color/c_f0f0f0"
                android:layout_marginTop="@dimen/dp_156"
                android:layout_width="wrap_content"
                android:id="@+id/line_ti"

                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_ge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_175"
                android:text="个性签名"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:id="@+id/tv_personiatiy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_180"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:textColor="@color/c_333333"
                android:text="四肢不全五体不勤"/>
            <View
                android:minWidth="@dimen/dp_1"
                android:outlineSpotShadowColor="@color/c_f0f0f0"
                android:layout_marginTop="@dimen/dp_208"
                android:layout_width="wrap_content"
                android:id="@+id/line_show"

                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_111"
        android:layout_marginTop="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_14"
            android:text="修改密码"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_333333"/>
        <View
            android:minWidth="@dimen/dp_1"
            android:outlineSpotShadowColor="@color/c_f0f0f0"
            android:layout_marginTop="@dimen/dp_53"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_72"
            android:layout_marginLeft="@dimen/dp_14"
            android:text="绑定手机"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_333333"/>
        <View
            android:minWidth="@dimen/dp_1"
            android:outlineSpotShadowColor="@color/c_f0f0f0"
            android:layout_marginTop="@dimen/dp_57"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bg_btn_fa6a13_r15"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_marginTop="@dimen/dp_28"
        />

</LinearLayout>