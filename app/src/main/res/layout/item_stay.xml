<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_122"
        app:cardCornerRadius="@dimen/dp_10"
        android:elevation="@dimen/dp_80"
        android:id="@+id/card"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/img_stay"
                android:layout_width="@dimen/dp_120"
                android:layout_height="match_parent"
                android:src="@mipmap/mm" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toRightOf="@id/img_stay">

                <TextView
                    android:id="@+id/mTv_name_stay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_22" />

                <TextView
                    android:id="@+id/tv_person"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_17"
                    android:layout_below="@id/mTv_name_stay"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="@string/app_name"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/img"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_below="@id/tv_person"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_14"
                    android:src="@drawable/share" />
                <TextView
                    android:id="@+id/mTv_region"
                    android:layout_toRightOf="@id/img"
                    android:layout_below="@id/tv_person"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_999999"
                    android:text="@string/app_name"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/img_likes"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_below="@id/img"
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/mTv_status"
                    android:layout_toRightOf="@id/img_likes"
                    android:layout_below="@id/mTv_region"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_999999"
                    android:text="@string/app_name"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/mImg"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dp_15"
                android:src="@drawable/follow_unselected"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_18" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
