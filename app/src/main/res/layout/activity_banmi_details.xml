<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_parent"
    android:fitsSystemWindows="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@drawable/back_white" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_111"
                android:text="伴米详情"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_90"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@drawable/share" />
        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:layout_below="@id/ll"
        android:background="@drawable/toolbar_gr" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_6"
        app:cardElevation="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_160"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@drawable/zhanweitu_touxiang" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toRightOf="@id/img"
                android:text="杨晨"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_22" />

            <TextView
                android:textSize="@dimen/sp_12"
                android:id="@+id/tv_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_toRightOf="@id/img"
                android:text="2675人关注" />

            <ImageView
                android:id="@+id/img_notice"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_18"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_17"
                android:src="@drawable/follow_unselected" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/img_notice"
                android:layout_marginRight="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_6"
                android:text="关注"
                android:textSize="@dimen/sp_10" />

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_135"
                android:layout_toRightOf="@id/img"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_135"
                android:layout_toRightOf="@id/iv_location"
                android:text="东京"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/iv_induct"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_18"
                android:layout_below="@id/iv_location"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_toRightOf="@id/img"
                android:src="@drawable/message" />

            <TextView
                android:textSize="@dimen/sp_12"
                android:id="@+id/tv_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_location"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_toRightOf="@id/iv_induct"
                android:text="日本国家旅游局专栏作者" />
            <TextView
                android:layout_marginBottom="@dimen/dp_15"
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/lead_02"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_11"
        android:orientation="vertical"
        android:layout_below="@id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_27"
        android:layout_gravity="center_horizontal"
        app:tabIndicatorColor="@color/c_fa6a13"
        app:tabSelectedTextColor="@color/c_373737"
        app:tabTextColor="@color/c_999999"/>

        <FrameLayout
            android:layout_below="@id/tab"
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_37" />
    </LinearLayout>
</RelativeLayout>
</android.support.v4.widget.NestedScrollView>
